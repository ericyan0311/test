#!/bin/bash

# 從標準輸入讀取一個整數值 N
read -p "請輸入一個整數 N: " N

# 檢查輸入是否為正整數
re='^[0-9]+$'
if ! [[ $N =~ $re ]]; then
  echo "錯誤：請輸入一個正整數。"
  exit 1
fi

# 初始化費伯納西數列的前兩個數值
a=0
b=1

# 輸出費伯納西數列的前 N 項
echo -n "費伯納西數列前 $N 項為："

# 處理 N=1 的情況
if [[ $N -ge 1 ]]; then
  echo -n "$a"
fi

# 處理 N>=2 的情況
if [[ $N -ge 2 ]]; then
  echo -n ", $b"
fi

# 計算並輸出費伯納西數列的第 3 到第 N 項
for ((i=3; i<=N; i++))
do
  # 計算第 i 項費伯納西數
  c=$((a + b))

  # 輸出數值並以逗號區隔
  echo -n ", $c"

  # 更新前兩個數值
  a=$b
  b=$c
done

echo  # 換行
